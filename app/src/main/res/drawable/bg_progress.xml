<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (rounded, faint gray) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#33000000"/> <!-- faint gray -->
        </shape>
    </item>

    <!-- Progress gradient (red → orange → yellow → green) -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>

            <gradient
                android:startColor="#BFFF0000"
                android:centerColor="#BFFFA100"
                android:endColor="#BF00FF00"
                android:angle="0"/>

            <stroke
                android:width="1dp"
                android:color="@color/colorTextMuted"/>
        </shape>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OnBoardActivity"
    android:background="@color/colorSurface">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/MCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nikahtech.muslimnikah.widgets.MIndicatorView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:activeColor="@color/colorPrimaryDark"
        app:dotSize="10dp"
        app:dotSpacing="8dp"
        app:inactiveColor="@color/colorTextMuted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.nikahtech.muslimnikah.widgets.MCardView
        android:id="@+id/MCardView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:backgroundColor="@color/colorCard"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:topLeftRadius="16dp"
        app:topRightRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nikahtech.muslimnikah.widgets.MButton
                android:id="@+id/getStartedBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="Get Started"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rounded="true"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp"
                android:textSize="16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.nikahtech.muslimnikah.widgets.MCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
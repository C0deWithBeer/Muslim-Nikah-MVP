<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_alert_dialog_rounded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TITLE -->
    <TextView
        android:id="@+id/titleTxt"
        android:text="Unsaved Changes"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/satoshi_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- MESSAGE -->
    <TextView
        android:id="@+id/messageTxt"
        android:text="You have made changes to your profile.\nDo you want to update the profile before leaving?"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="@font/satoshi_regular"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ACTIONS -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discardBtn"
            android:text="Discard"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:fontFamily="@font/satoshi_medium"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/updateBtn"
            android:text="Update"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/satoshi_medium"
            android:padding="10dp"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main_fragments.AccountFragment"
    android:background="@color/colorBackground">

    <com.nikahtech.muslimnikah.widgets.MGradientView
        android:id="@+id/MGradientView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:bottomLeftRadius="50dp"
        app:bottomRightRadius="50dp"
        app:gradientAngle="-90"
        app:gradientEndColor="@color/colorPrimaryDark"
        app:gradientStartColor="@color/colorPrimary"
        app:gradientType="linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/white"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/MGradientView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MGradientView2"
        app:layout_constraintTop_toBottomOf="@+id/MGradientView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/medium"
        android:text="Beer Mohamed"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/light"
        android:text="Single"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- VIEW PROFILE (Already Correct) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viewProfileOpt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cornerRadius="4dp"
                app:strokeColor="@color/colorDivider"
                app:strokeWidth="2dp"
                android:clickable="true"
                app:cardElevation="6dp"
                app:rippleColor="#BFD9F5DA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_eye_on" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="View Profile"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- EDIT PROFILE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/editProfileOpt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:cornerRadius="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:rippleColor="#BFD9F5DA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_edit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SUBSCRIPTION -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/subscriptionOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:cornerRadius="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:rippleColor="#BFD9F5DA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_star_round" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginVertical="8dp"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Subscription"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="No Subscription"
                            android:textColor="@color/colorAlert"
                            android:textSize="15sp"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PARTNER PREFERENCE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/partnerPreferenceOpt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:cornerRadius="4dp"
                android:clickable="true"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:rippleColor="#BFD9F5DA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_heart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Partner Preference"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PROFILE PRIVACY -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:cardElevation="6dp"
                app:cornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_shield" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Profile Privacy"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DELETE ACCOUNT -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:cornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_cancel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Delete Account"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- REPORT PROBLEM -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:cornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_flag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Report Problem"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:cornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_faq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="FAQ"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RATE US -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:cornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Rate us"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LOGOUT -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorDivider"
                app:cornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

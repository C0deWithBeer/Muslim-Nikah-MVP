<resources>
    <!-- Base application theme -->
    <style name="Theme.MuslimNikah" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Bottom Navigation Text Appearance -->
    <style name="BottomNavTextAppearence">
        <item name="fontFamily">@font/medium</item>
    </style>

    <!-- Edit Profile Tab Text -->
    <style name="EditProfileTabLayText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextMuted</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditProfileTabLayTextSelected">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Popup Dialog Animation -->
    <style name="PopupDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- OTP EditText Style -->
    <style name="OtpEditTextStyle">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <!-- ShapeAppearance for rounded corners -->
    <style name="ShapeAppearance.App.DatePicker" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- DatePicker Theme -->
    <style name="ThemeOverlay.App.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimaryBtn</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorPrimaryBtn</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Calendar styling -->
        <item name="materialCalendarStyle">@style/Widget.App.MaterialCalendar</item>

        <!-- Rounded corners -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.DatePicker</item>
    </style>

    <!-- Calendar Base -->
    <style name="Widget.App.MaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="daySelectedStyle">@style/DaySelectedStyle</item>
        <item name="dayTodayStyle">@style/DayTodayStyle</item>
    </style>

    <!-- Selected Day -->
    <style name="DaySelectedStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="backgroundTint">@color/colorPrimaryBtn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Today -->
    <style name="DayTodayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="android:textColor">@color/colorPrimaryBtn</item>
    </style>
</resources>
